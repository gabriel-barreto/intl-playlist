{
  "env": {
    "es2021": true,
    "jest": true,
    "node": true
  },
  "extends": ["standard", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "import/prefer-default-export": "off"
  }
}
